<%- include('./inc/header') %> 
  <%- include('./inc/navbar') %>
	<section>
		<div class="container">
			<div class="row">
				<section id="cart_items">
          <div class="container">
            <div class="breadcrumbs">
              <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Check out</li>
              </ol>
            </div><!--/breadcrums-->
            <div class="shopper-informations">
              <div class="row">
                <div class="col-sm-6">
                  <div class="shopper-info">
                    <p>Thông tin khánh hàng</p>
                    <form>
                      <input type="text" placeholder="Họ và tên">
                      <input type="text" placeholder="Số điện thoại">
                      <input type="text" placeholder="Địa chỉ">
                    </form>
                    <a class="btn btn-primary" href="">Đặt hàng</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="review-payment">
              <h2>Xem qua sản phẩm</h2>
            </div>
            <% if(product) { %>
              <div class="table-responsive cart_info">
                <table class="table table-condensed">
                  <thead>
                    <tr class="cart_menu">
                      <td class="image">Mặt hàng</td>
                      <td class="description"></td>
                      <td class="price">Giá</td>
                      <td class="quantity">Số lượng</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>
                   <% product.forEach(items => { %>
                    <tr>
                      <td class="cart_product">
                        <a href=""><img src="<%= items.item.image %> " alt="<%= items.item.title %>" width="110"></a>
                      </td>
                      <td class="cart_description">
                        <h4><a href=""><%= items.item.title %></a></h4>
                      </td>
                      <td class="cart_price">
                        <p>$<%= items.item.price %> </p>
                      </td>
                      <td class="cart_quantity">
                        <div class="cart_quantity_button">
                          <input class="cart_quantity_input" type="text" name="quantity" value="<%= items.quantity %>" autocomplete="off" size="2">
                        </div>
                      </td>
                      <td class="cart_delete">
                        <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                      </td>
                    </tr>
                   <% }) %>
                   <tr>
                    <td colspan="4">&nbsp;</td>
                    <td colspan="2">
                      <table class="table table-condensed total-result">
                        <tbody>
                        <tr>
                          <td>Tổng số tiền: </td>
                          <td><span>$<%= totalPrice %> </span></td>
                        </tr>
                      </tbody></table>
                    </td>
                  </tr>
                  </tbody>
                </table>
              </div>
            <% } %> 
          </div>
        </section> <!--/#cart_items-->
			</div>
		</div>
	</section>
	
<%- include('./inc/footer') %> 