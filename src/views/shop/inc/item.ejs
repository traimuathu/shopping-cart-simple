<div class="col-sm-9 padding-right">
  <div class="features_items"><!--features_items-->
    <h2 class="title text-center">MẶT HÀNG</h2>
    <% products.forEach(item => { %>
      <div class="col-sm-4">
        <div class="product-image-wrapper">
          <div class="single-products">
            <div class="productinfo text-center">
              <a href="/<%= item._id %>/product-details">
                <img src="<%= item.image %>" alt="image" />
              </a>
              <h2>$<%= item.price %> </h2>
              <p><%= item.title %> </p>
              <a href="/<%= item._id %>/add-to-cart" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
            </div>
